{
  "data": {
    "processed_path": "data/processed/load_data_processed.csv",
    "split_info_path": "data/processed/data_split_info.json",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15
  },
  "training": {
    "sequence_length": 96,
    "batch_size": 64,
    "epochs": 50,
    "learning_rate": 0.001,
    "early_stopping": {
      "enabled": true,
      "patience": 10,
      "min_delta": 1e-5,
      "verbose": true
    },
    "target_loss": {
      "enabled": true,
      "target_val_loss": 0.00005,
      "metric": "validation",
      "verbose": true
    }
  },
  "model": {
    "type": "lstm",
    "input_size": -1,
    "output_size": 1,
    "dropout": 0.2,
    "lstm": {
      "hidden_size": 128,
      "num_layers": 2
    },
    "gru": {
      "hidden_size": 128,
      "num_layers": 2
    }
  },
  "logging": {
    "checkpoint_dir": "results/checkpoints",
    "log_dir": "results/tensorboard_logs",
    "best_model_name": "best_model.pth"
  }
}
