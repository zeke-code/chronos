{
  "data": {
    "processed_path": "data/processed/load_data_processed.csv",
    "validation_split": 0.2
  },
  "training": {
    "sequence_length": 96,
    "batch_size": 64,
    "epochs": 50,
    "learning_rate": 0.001,
    "early_stopping": {
      "enabled": true,
      "patience": 10,
      "min_delta": 0.00001,
      "verbose": true
    }
  },
  "model": {
    "input_size": -1,
    "hidden_size": 128,
    "num_layers": 2,
    "output_size": 1,
    "dropout": 0.2
  },
  "logging": {
    "checkpoint_dir": "results/checkpoints",
    "log_dir": "results/tensorboard_logs",
    "best_model_name": "best_model.pth"
  }
}
