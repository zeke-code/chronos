{
  "project_name": "energy_load_forecasting",
  "seed": 42,

  "data": {
    "processed_file": "data/processed/load_data_processed.csv",
    "target_column": "actual_load",
    "sequence_length": 168,
    "prediction_horizon": 24,
    "train_split": 0.7,
    "val_split": 0.15,
    "test_split": 0.15,
    "normalize_features": true,
    "normalize_target": true
  },

  "model": {
    "architecture": "lstm",
    "input_size": 18,
    "hidden_size": 128,
    "num_layers": 2,
    "dropout": 0.2,
    "bidirectional": true,
    "output_size": 24
  },

  "training": {
    "batch_size": 32,
    "learning_rate": 0.001,
    "num_epochs": 100,
    "optimizer": "adam",
    "weight_decay": 1e-5,
    "scheduler": "reduce_on_plateau",
    "patience": 10,
    "early_stopping_patience": 15,
    "gradient_clipping": 1.0
  },

  "data_augmentation": {
    "enabled": true,
    "noise_factor": 0.01,
    "scaling_factor": 0.05,
    "time_shift_max": 3,
    "augmentation_probability": 0.3
  },

  "transfer_learning": {
    "enabled": false,
    "pretrained_model_path": null,
    "freeze_layers": [],
    "fine_tune_layers": "all"
  },

  "checkpointing": {
    "enabled": true,
    "save_best_only": true,
    "save_frequency": 5,
    "checkpoint_dir": "checkpoints",
    "resume_training": false,
    "resume_checkpoint": null
  },

  "logging": {
    "log_dir": "logs",
    "tensorboard_enabled": true,
    "log_frequency": 10,
    "save_predictions": true,
    "save_figures": true
  },

  "validation": {
    "metrics": ["mae", "mse", "rmse", "mape"],
    "validation_frequency": 1,
    "plot_predictions": true,
    "n_prediction_samples": 5
  },

  "testing": {
    "test_batch_size": 64,
    "save_test_results": true,
    "generate_test_report": true
  },

  "hyperparameter_search": {
    "enabled": false,
    "search_space": {
      "learning_rate": [0.001, 0.01, 0.1],
      "batch_size": [16, 32, 64],
      "hidden_size": [64, 128, 256],
      "num_layers": [1, 2, 3],
      "dropout": [0.1, 0.2, 0.3]
    },
    "search_method": "grid",
    "max_trials": 20
  },

  "model_comparison": {
    "enabled": true,
    "models_to_compare": [
      {
        "name": "lstm_small",
        "hidden_size": 64,
        "num_layers": 1,
        "dropout": 0.1
      },
      {
        "name": "lstm_medium",
        "hidden_size": 128,
        "num_layers": 2,
        "dropout": 0.2
      },
      {
        "name": "lstm_large",
        "hidden_size": 256,
        "num_layers": 3,
        "dropout": 0.3
      }
    ]
  }
}
